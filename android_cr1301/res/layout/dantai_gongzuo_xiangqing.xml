<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/beijing"
	android:orientation="vertical" >
	<!-- 添加，删除按钮 -->

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:gravity="center" >

		

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:text="主机工作详情"
			android:textColor="#00ffff"
			android:textSize="30dp"
			android:textStyle="bold" />

		<Button
			android:id="@+id/xiangqing_shanchu"
			android:layout_width="30dp"
			android:layout_height="wrap_content"
			android:layout_marginLeft="85dp"
			android:background="@drawable/shanchu"
			android:textSize="20dp" />

	</LinearLayout>

	<!-- 界面表格块 -->

	<LinearLayout
		
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal" >

		<TableLayout
			android:id="@+id/TableLayout01"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1" >

			<TableRow
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" >

				<TextView
					android:layout_width="fill_parent"
					android:layout_height="25dp"
					android:background="@drawable/textview_color"
					android:gravity="center"
					android:text="编号"
					android:textSize="15dp" 
					android:layout_weight="0.1"/>

				<TextView
					android:id="@+id/bianhao"
					android:layout_width="fill_parent"
					android:layout_height="25dp"
					android:background="@drawable/textview_color"
					android:gravity="center"
					android:textSize="15dp"
					android:layout_weight="3" />
			</TableRow>

			<TableRow
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" >

				<TextView
					android:layout_width="fill_parent"
					android:layout_height="25dp"
					android:background="@drawable/textview_color"
					android:gravity="center"
					android:text="运行状态"
					android:textSize="15dp"
					android:layout_weight="0.1" />

				<TextView
					android:id="@+id/yunxing"
					android:layout_width="fill_parent"
					android:layout_height="25dp"
					android:background="@drawable/textview_color"
					android:gravity="center"
					android:textSize="15dp" 
					android:layout_weight="3"/>
			</TableRow>

			<TableRow
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" >

				<TextView
					android:layout_width="fill_parent"
					android:layout_height="25dp"
					android:background="@drawable/textview_color"
					android:gravity="center"
					android:text="警告信息"
					android:textSize="15dp"
					android:layout_weight="0.1" />

				<TextView
					android:id="@+id/jiangao"
					android:layout_width="fill_parent"
					android:layout_height="25dp"
					android:background="@drawable/textview_color"
					android:gravity="center"
					android:textSize="15dp"
					android:layout_weight="3" />
			</TableRow>

			<TableRow
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" >

				<TextView
					android:layout_width="fill_parent"
					android:layout_height="25dp"
					android:background="@drawable/textview_color"
					android:gravity="center"
					android:text="电池电量(%)"
					android:textSize="15dp" 
					android:layout_weight="0.1"/>

				<TextView
					android:id="@+id/dianchi"
					android:layout_width="fill_parent"
					android:layout_height="25dp"
					android:background="@drawable/textview_color"
					android:gravity="center"
					android:textSize="15dp" 
					android:layout_weight="3"/>
			</TableRow>

			<TableRow
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" >

				<TextView
					android:layout_width="fill_parent"
					android:layout_height="25dp"
					android:background="@drawable/textview_color"
					android:gravity="center"
					android:text="主机电量(mA)"
					android:textSize="15dp" 
					android:layout_weight="0.1"/>

				<TextView
					android:id="@+id/ZHUJI"
					android:layout_width="fill_parent"
					android:layout_height="25dp"
					android:background="@drawable/textview_color"
					android:gravity="center"
					android:textSize="15dp"
					android:layout_weight="3" />
			</TableRow>

			<TableRow
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" >

				<TextView
					android:layout_width="fill_parent"
					android:layout_height="25dp"
					android:background="@drawable/textview_color"
					android:gravity="center"
					android:text="序列号(S/N)"
					android:textSize="15dp" 
					android:layout_weight="0.1"/>

				<TextView
					android:id="@+id/xuliehao"
					android:layout_width="fill_parent"
					android:layout_height="25dp"
					android:background="@drawable/textview_color"
					android:gravity="center"
					android:textSize="15dp"
					android:layout_weight="3" />
			</TableRow>

			<TableRow
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" >

				<TextView
					android:layout_width="fill_parent"
					android:layout_height="25dp"
					android:background="@drawable/textview_color"
					android:gravity="center"
					android:text="倾斜角度"
					android:textSize="15dp"
					android:layout_weight="0.1" />

				<TextView
					android:id="@+id/qingxiejiaodu"
					android:layout_width="fill_parent"
					android:layout_height="25dp"
					android:background="@drawable/textview_color"
					android:gravity="center"
					android:textSize="15dp"
					android:layout_weight="3" />
			</TableRow>

			<TableRow
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" >

				<TextView
					android:layout_width="fill_parent"
					android:layout_height="25dp"
					android:background="@drawable/textview_color"
					android:gravity="center"
					android:text="本次清扫面积(m^2)"
					android:textSize="15dp"
					android:layout_weight="0.1" />

				<TextView
					android:id="@+id/saomian"
					android:layout_width="fill_parent"
					android:layout_height="25dp"
					android:background="@drawable/textview_color"
					android:gravity="center"
					android:textSize="15dp"
					android:layout_weight="3" />
			</TableRow>

			<TableRow
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" >

				<TextView
					android:layout_width="fill_parent"
					android:layout_height="25dp"
					android:background="@drawable/textview_color"
					android:gravity="center"
					android:text="连续工作时间(min)"
					android:textSize="15dp" 
					android:layout_weight="0.1"/>

				<TextView
					android:id="@+id/shijian"
					android:layout_width="fill_parent"
					android:layout_height="25dp"
					android:background="@drawable/textview_color"
					android:gravity="center"
					android:textSize="15dp" 
					android:layout_weight="3"/>
			</TableRow>

			<TableRow
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" >

				<TextView
					android:layout_width="fill_parent"
					android:layout_height="25dp"
					android:background="@drawable/textview_color"
					android:gravity="center"
					android:text="预计可继续清扫面积(m^2)"
					android:textSize="15dp"
					android:layout_weight="0.1" />

				<TextView
					android:id="@+id/yuji"
					android:layout_width="fill_parent"
					android:layout_height="25dp"
					android:background="@drawable/textview_color"
					android:gravity="center"
					android:textSize="15dp" 
					android:layout_weight="3"/>
			</TableRow>
		</TableLayout>
		<!-- 按钮模块 -->

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:gravity="center"
			android:orientation="vertical" >

			<!-- 第一排按钮 -->

			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal" >

				<Button
					android:id="@+id/left"
					android:layout_width="fill_parent"
					android:layout_height="25dp"
					android:layout_weight="1"
					android:background="@drawable/xiangxi_caozuo_btn"
					android:gravity="center"
					android:text="自动左转清洁"
					android:textSize="15dp" />

				<Button
					android:id="@+id/right"
					android:layout_width="fill_parent"
					android:layout_height="25dp"
					android:layout_weight="1"
					android:background="@drawable/xiangxi_caozuo_btn"
					android:gravity="center"
					android:text="自动右转清洁"
					android:textSize="15dp" />
			</LinearLayout>
			
			<!-- 上按钮 -->

			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:orientation="horizontal" >

				<Button
					android:id="@+id/shang"
					android:layout_width="85dp"
					android:layout_height="55dp"
					android:background="@drawable/shang_btn"
					android:gravity="center_horizontal" />

			</LinearLayout>

			<!-- 左中右方向按钮 -->

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:orientation="horizontal" >

				<Button
					android:id="@+id/zuo"
					android:layout_width="55dp"
					android:layout_height="85dp"
					android:background="@drawable/zuo_btn" />

				<Button
					android:id="@+id/zhong"
					android:layout_width="85dp"
					android:layout_height="85dp"
					android:background="@drawable/zhong_btn" />

				<Button
					android:id="@+id/you"
					android:layout_width="55dp"
					android:layout_height="85dp"
					android:background="@drawable/you_btn" />
			</LinearLayout>

			<!-- 下按钮 -->

			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal" 
				android:gravity="center">

				<Button
					android:id="@+id/xia"
					android:layout_width="85dp"
					android:layout_height="55dp"
					android:background="@drawable/xia_btn"/>

			</LinearLayout>
			
			
			<!-- 第二排按钮 -->

			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal" >

				<Button
					android:id="@+id/dingwei"
					android:layout_width="fill_parent"
					android:layout_height="25dp"
					android:layout_weight="1"
					android:background="@drawable/xiangxi_caozuo_btn"
					android:gravity="center"
					android:text="呼叫定位"
					android:textSize="15dp" />

				<Button
					android:id="@+id/xieqi"
					android:layout_width="fill_parent"
					android:layout_height="25dp"
					android:layout_weight="1"
					android:gravity="center"
					android:background="@drawable/xiangxi_caozuo_btn"
					android:text="开启泄气阀"
					android:textSize="15dp" />
			</LinearLayout>
			
		<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:orientation="vertical" >

		<Button
			android:layout_marginTop="5dp"
			android:id="@+id/dianjiguanli"
			android:layout_width="wrap_content"
			android:layout_height="25dp"
			android:gravity="center"
			android:background="@drawable/dianji_guanli" 
			android:text="电机管理"
			android:textSize="20dp"/>
	</LinearLayout>
		</LinearLayout>		
	</LinearLayout>

	

</LinearLayout>